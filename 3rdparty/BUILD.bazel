package(default_visibility = ["//visibility:public"])

filegroup(
    name = "distro",
    srcs = glob([
        "*.bzl",
        "*.bazel",
    ]),
)

filegroup(
    name = "bzl_srcs",
    srcs = glob(["*.bzl"]),
)

config_setting(
    name = "linux",
    constraint_values = ["@platforms//os:linux"],
)

alias(
    name = "libgit2",
    actual = select({
        ":linux": "@libgit2.foreign_cc//:libgit2",
        "//conditions:default": "@libgit2//:libgit2",
    }),
)
